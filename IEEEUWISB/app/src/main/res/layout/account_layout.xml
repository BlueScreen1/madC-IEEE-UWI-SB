<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/white"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bluescreen1.ieeeuwisb.MainActivity$PlaceholderFragment">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:background="@drawable/account"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username"
        android:layout_marginTop="25dp"
        android:id="@+id/acctName"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/acctEmail"
        android:layout_below="@+id/acctName"
        android:layout_alignLeft="@+id/acctName"
        android:layout_alignStart="@+id/acctName"
        android:layout_alignRight="@+id/acctName"
        android:layout_alignEnd="@+id/acctName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="IEEE Number"
        android:id="@+id/acctIEEE"
        android:layout_below="@+id/acctEmail"
        android:layout_alignLeft="@+id/acctEmail"
        android:layout_alignStart="@+id/acctEmail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Groups"
        android:id="@+id/acctGroups"
        android:layout_below="@+id/acctIEEE"
        android:layout_alignLeft="@+id/acctIEEE"
        android:layout_alignStart="@+id/acctIEEE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/userName"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/acctName"
        android:layout_toEndOf="@+id/acctName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/userEmail"
        android:layout_below="@+id/userName"
        android:layout_alignTop="@+id/acctEmail"
        android:layout_alignLeft="@+id/userName"
        android:layout_alignStart="@+id/userName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/userIEEE"
        android:layout_below="@+id/userEmail"
        android:layout_alignLeft="@+id/userName"
        android:layout_alignStart="@+id/userName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/userGroups"
        android:layout_below="@+id/userIEEE"
        android:layout_alignLeft="@+id/userName"
        android:layout_alignStart="@+id/userName" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/editUser"
        android:background="@drawable/wrench"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/acctGroups"
        android:layout_marginTop="10dp"/>

</RelativeLayout>