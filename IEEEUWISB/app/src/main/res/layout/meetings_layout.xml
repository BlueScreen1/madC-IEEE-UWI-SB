<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charcoal"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:text="@string/Upcoming_meeting"
        android:background="@color/light_blue"
        android:padding="10dp"
        android:textColor="@color/white"
        android:id="@+id/upMeetings"
        android:gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upmeeting"
        android:textSize="45sp"
        android:textStyle="bold"
        android:maxHeight="60dp"
        android:gravity="center"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upMeetings_details"
            android:textSize="22sp"
            android:maxHeight="20dp"
            android:textColor="@color/light_grey"
            android:layout_gravity="left" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:textSize="30sp"
        android:maxHeight="30dp"
        android:textColor="@color/light_grey"
        android:layout_gravity="center_horizontal" />


    </LinearLayout>

    <TextView
        android:text="@string/Past_meetings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:background="@color/blue_grey_900"
        android:padding="10dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/pastmeetings_list"
        android:background="@color/medium_blue"
        android:layout_weight="3" />

</LinearLayout>